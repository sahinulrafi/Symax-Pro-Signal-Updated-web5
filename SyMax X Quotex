    <script>
        function generateSignal(pair) {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = `Processing ${pair}...`;

            // Random direction with higher chance of Up/Down
            const directions = ['Up', 'Down', 'Up', 'Down', 'Avoid']; // Up/Down weighted 4:1
            const direction = directions[Math.floor(Math.random() * directions.length)];

            // Display result
            resultDiv.innerHTML = `${pair}: ${direction}`;

            // Disable button and set 1-minute timer
            const button = document.querySelector(`button[onclick="generateSignal('${pair}')"]`);
            button.disabled = true;
            button.style.opacity = '0.6';

            setTimeout(() => {
                resultDiv.innerHTML = '';
                button.disabled = false;
                button.style.opacity = '1';
            }, 60000); // 1 minute = 60000 milliseconds
        }
    </script>
